    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <!-- Loading Screen -->
    <div id="loading-screen">
        <div class="spinner"></div>
        <p>جاري التحميل...</p>
    </div>

    <section class="add-supplier-section">
        <div class="separator">
            <h2>إضافة مورد جديد</h2>
        </div>

        <!-- نموذج إضافة مورد -->
        <form class="add-supplier-form" asp-action="AddSupplier" asp-controller="Admin">
            <div class="row">
                <label for="supplier-name">اسم المورد</label>
                <input asp-for="Name" id="supplier-name" placeholder="ادخل اسم المورد">
                <span class="error" id="error-supplier-name"></span>
            </div>

            <div class="row">
                <label for="supplier-address">عنوان المورد</label>
                <input asp-for="Address" id="supplier-address" placeholder="ادخل عنوان المورد">
                <span class="error" id="error-supplier-address"></span>
            </div>

            <div class="row">
                <label for="first-representative-name">اسم المندوب الأول</label>
                <input asp-for="FirstRepresentativeName" id="first-representative-name" placeholder="ادخل اسم المندوب الأول">
                <span class="error" id="error-first-representative-name"></span>
            </div>

            <div class="row">
                <label for="first-representative-phone">رقم تليفون المندوب الأول</label>
                <input asp-for="FirstRepresentativePhoneNumber" id="first-representative-phone" placeholder="ادخل رقم تليفون المندوب الأول">
                <span class="error" id="error-first-representative-phone"></span>
            </div>

            <div class="row">
                <label for="second-representative-name">اسم المندوب الثاني</label>
                <input asp-for="SecondRepresentativeName" id="second-representative-name" placeholder="ادخل اسم المندوب الثاني">
                <span class="error" id="error-second-representative-name"></span>
            </div>

            <div class="row">
                <label for="second-representative-phone">رقم تليفون المندوب الثاني</label>
                <input asp-for="SecondRepresentativePhoneNumber" id="second-representative-phone" placeholder="ادخل رقم تليفون المندوب الثاني">
                <span class="error" id="error-second-representative-phone"></span>
            </div>

            <!-- أزرار الحفظ -->
            <div class="buttons">
                <button type="submit" class="save-supplier-btn">حفظ</button>
            </div>
        </form>
