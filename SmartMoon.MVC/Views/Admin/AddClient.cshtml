<body>
    <!-- Loading Screen -->
    <div id="loading-screen">
        <div class="spinner"></div>
        <p>جاري التحميل...</p>
    </div>

    
    <section class="add-client-section">
        <div class="separator">
            <h2>إضافة عميل جديد</h2>
        </div>


        <!-- نموذج إضافة عميل -->
        <form class="add-client-form" asp-action="AddClient" asp-controller="Admin" method="post">
            <div class="row">
                <label for="client-name">اسم العميل</label>
                <input asp-for="Name" id="client-name" placeholder="ادخل اسم العميل">
                <span asp-validation-for="Name" class="error" id="error-client-name"></span>
            </div>

            <div class="row">
                <label for="client-address">عنوان العميل</label>
                <input asp-for="Address" id="client-address" placeholder="ادخل عنوان العميل">
                <span asp-validation-for="Address" class="error" id="error-client-address"></span>
            </div>

            <div class="row">
                <label for="client-national-id">الرقم القومي</label>
                <input asp-for="NationalID" id="client-national-id" placeholder="ادخل الرقم القومي">
                <span asp-validation-for="NationalID" class="error" id="error-client-national-id"></span>
            </div>

            <div class="row">
                <label for="client-phone">رقم الهاتف</label>
                <input asp-for="PhoneNumber" id="client-phone" placeholder="ادخل رقم الهاتف">
                <span asp-validation-for="PhoneNumber" class="error" id="error-client-phone"></span>
            </div>

            <div class="row">
                <label for="client-mobile">رقم الموبايل</label>
                <input asp-for="MobileNumber" id="client-mobile" placeholder="ادخل رقم الموبايل">
                <span asp-validation-for="MobileNumber" class="error" id="error-client-mobile"></span>
            </div>
            
            <!-- أزرار الحفظ -->
            <div class="buttons">
                <button type="submit" class="save-client-btn">حفظ</button>
            </div>
        </form>
